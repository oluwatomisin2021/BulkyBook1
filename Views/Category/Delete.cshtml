@model Category
@{
    ViewData["Title"] = "Delete Page";
}

<form method="post"asp-action="Delete">
    <input asp-for="@Model.Id" hidden>
    <div class="border p-3 mt-4">
        <div class="row pb-3">
            <h2>Delete @Model.Name.ToUpper() </h2>
            <hr>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.Name"></label>
            <input asp-for="@Model.Name" disabled class="form-control">
        </div>
        <div class="mb-3">
            <label asp-for="@Model.DisplayOrder"></label>
            <input asp-for="@Model.DisplayOrder" disabled class="form-control">
        </div>
        <div>
            <button type="submit" class="btn btn-danger" style="width:150px" asp-route-id="@Model.Id">Yes</button>
            <a asp-controller="Category" asp-action="Index" class="btn btn-primary" style="margin-left: 5px; width:150px;">Cancel</a>
        </div>
    </div>
</form>